{
  "name": "equaltasktime",
  "productName": "ETC",
  "description": "Application de gestion cyclique de travaux",
  "author": "Philicare<philippe.perret@yahoo.fr>",
  "version": "0.5.1",
  "private": true,
  "main": "electron/main.js",
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@playwright/test": "^1.56.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "latest",
    "@types/express": "^5.0.3",
    "@types/js-yaml": "^4.0.9",
    "electron": "38.3.0",
    "electron-builder": "^26.0.12",
    "playwright": "^1.56.1"
  },
  "scripts": {
    "tests": "playwright test",
    "reset": "cat .secret/password | sudo -S pkill -f \"bun.*server\" 2>/dev/null; cat .secret/password | rm -rf ~/.bun/install/cache",
    "watch_ts": "bun build ./lib/client/main.ts --outfile=./public/js/main.js --target=browser --watch & bun build ./lib/client/ui.ts --outfile=./public/js/ui.js --target=browser --watch & bun build ./lib/client/prefs.ts --outfile=./public/js/prefs.js --target=browser --watch & bun build ./lib/client/help.ts --outfile=./public/js/help.js --target=browser --watch",
    "start": "bun pm cache rm && npx electron .",
    "check-locales": "bun run scripts/check_locales.ts",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "force-vide-cache-macos": "/System/Library/Frameworks/CoreServices.framework/Frameworks/LaunchServices.framework/Support/lsregister -kill -r -domain local -domain system -domain user"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@types/marked": "^6.0.0",
    "better-sqlite3": "^12.4.1",
    "electron-log": "^5.4.3",
    "express": "^5.1.0",
    "js-yaml": "^4.1.0",
    "marked": "^16.4.1",
    "nanoid": "^5.1.6",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "unified": "^11.0.5"
  },
  "build": {
    "appId": "com.philippeperret.equaltaskcycle",
    "productName": "ETC",
    "mac": {
      "target": "dmg",
      "icon": "electron/icon.png",
      "identity": null
    },
    "extraResources": [
      {
        "from": "/opt/homebrew/bin/bun",
        "to": "bun"
      }
    ],
    "asarUnpack": [
      "public/**/*",
      "lib/**/*",
      "electron/**/*"
    ],
    "files": [
      "electron/**/*",
      "public/**/*",
      "lib/**/*",
      "server.ts",
      "node_modules/**/*"
    ]
  }
}
